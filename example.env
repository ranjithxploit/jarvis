# JARVIS AI Assistant Environment Configuration
# Copy this file to .env and fill in your actual API keys

# AI API Keys (required)
GROQ_API_KEY="your groq api for agent"
GEMINI_API_KEY="your gemini api key"

# Optional AI APIs
OPENAI_API_KEY="your_openai_api_key_here"
ANTHROPIC_API_KEY="your_anthropic_api_key_here"

# Voice Configuration - Uncomment only one voice
# For Iron Man JARVIS-like voice, use Microsoft David Desktop (male voice)
JARVIS_VOICE=Microsoft David Desktop
#JARVIS_VOICE=Microsoft Zira Desktop
#JARVIS_VOICE=Microsoft Mark Desktop
#JARVIS_VOICE=Microsoft George Desktop
#JARVIS_VOICE=Microsoft Hazel Desktop
#JARVIS_VOICE=Microsoft Catherine Desktop
#JARVIS_VOICE=Microsoft Helena Desktop
#JARVIS_VOICE=Microsoft Hortense Desktop
#JARVIS_VOICE=Microsoft Elsa Desktop
#JARVIS_VOICE=Microsoft Sabina Desktop

# Voice Settings
JARVIS_SPEECH_RATE=180
JARVIS_SPEECH_VOLUME=0.9

# Model Configuration
DEFAULT_MODEL=groq
GROQ_MODEL=mixtral-8x7b-32768
GOOGLE_MODEL=gemini-1.5-pro-latest

# Application Settings
JARVIS_NAME=JARVIS
DEBUG_MODE=false
LOG_LEVEL=INFO